---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} - Casoon UI Library</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/casoon/casoon-ui-lib/src/base.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/casoon/casoon-ui-lib/src/animations.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/casoon/casoon-ui-lib/src/effects.css" />
  </head>
  <body>
    <nav class="nav">
      <a href="/casoon-ui-lib/" class={Astro.url.pathname === '/casoon-ui-lib/' ? 'active' : ''}>Ãœbersicht</a>
      <a href="/casoon-ui-lib/animations/" class={Astro.url.pathname === '/casoon-ui-lib/animations/' ? 'active' : ''}>Animationen</a>
      <a href="/casoon-ui-lib/effects/" class={Astro.url.pathname === '/casoon-ui-lib/effects/' ? 'active' : ''}>Effekte</a>
      <a href="/casoon-ui-lib/grid/" class={Astro.url.pathname === '/casoon-ui-lib/grid/' ? 'active' : ''}>Grid</a>
      <a href="/casoon-ui-lib/typography/" class={Astro.url.pathname === '/casoon-ui-lib/typography/' ? 'active' : ''}>Typografie</a>
    </nav>
    <slot />
    <script>
      import { animate, stagger } from 'motion';
      window.animate = animate;
      window.stagger = stagger;
    </script>
  </body>
</html>

<style>
       :root {
         --font-sans: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
       }
       
       body {
         font-family: var(--font-sans);
         line-height: 1.5;
         color: var(--gray-9);
         max-width: 65ch;
         margin: 0 auto;
         padding: 2rem;
       }

       h1 {
         font-size: var(--font-size-4);
         font-weight: var(--font-weight-7);
         margin-bottom: var(--size-4);
       }

       h2 {
         font-size: var(--font-size-3);
         font-weight: var(--font-weight-6);
         margin-top: var(--size-6);
         margin-bottom: var(--size-3);
       }

       .nav {
         margin-bottom: var(--size-6);
         padding-bottom: var(--size-4);
         border-bottom: 1px solid var(--gray-3);
       }

       .nav a {
         color: var(--gray-7);
         text-decoration: none;
         margin-right: var(--size-4);
       }

       .nav a:hover {
         color: var(--gray-9);
       }

       .nav a.active {
         color: var(--indigo-7);
         font-weight: var(--font-weight-6);
       }
</style> 