---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} - Casoon UI Library</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/casoon/casoon-ui-lib/src/base.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/casoon/casoon-ui-lib/src/animations.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/casoon/casoon-ui-lib/src/effects.css" />
    <style>
      :root {
        --font-sans: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }
      
      body {
        font-family: var(--font-sans);
        line-height: 1.5;
        color: var(--gray-9);
        max-width: 65ch;
        margin: 0 auto;
        padding: 2rem;
      }

      h1 {
        font-size: var(--font-size-4);
        font-weight: var(--font-weight-7);
        margin-bottom: var(--size-4);
      }

      h2 {
        font-size: var(--font-size-3);
        font-weight: var(--font-weight-6);
        margin-top: var(--size-6);
        margin-bottom: var(--size-3);
      }

      .nav {
        margin-bottom: var(--size-6);
        padding-bottom: var(--size-4);
        border-bottom: 1px solid var(--gray-3);
      }

      .nav a {
        color: var(--gray-7);
        text-decoration: none;
        margin-right: var(--size-4);
      }

      .nav a:hover {
        color: var(--gray-9);
      }

      .nav a.active {
        color: var(--indigo-7);
        font-weight: var(--font-weight-6);
      }
    </style>
  </head>
  <body>
    <nav class="nav">
      <a href="/casoon-ui-lib/examples/" class={Astro.url.pathname === '/casoon-ui-lib/examples/' ? 'active' : ''}>Ãœbersicht</a>
      <a href="/casoon-ui-lib/examples/animations/" class={Astro.url.pathname === '/casoon-ui-lib/examples/animations/' ? 'active' : ''}>Animationen</a>
      <a href="/casoon-ui-lib/examples/effects/" class={Astro.url.pathname === '/casoon-ui-lib/examples/effects/' ? 'active' : ''}>Effekte</a>
      <a href="/casoon-ui-lib/examples/grid/" class={Astro.url.pathname === '/casoon-ui-lib/examples/grid/' ? 'active' : ''}>Grid</a>
      <a href="/casoon-ui-lib/examples/typography/" class={Astro.url.pathname === '/casoon-ui-lib/examples/typography/' ? 'active' : ''}>Typografie</a>
    </nav>
    <slot />
    <script>
      import { animate, stagger } from 'motion';
      window.animate = animate;
      window.stagger = stagger;
    </script>
  </body>
</html> 