---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Casoon UI Library - Eine moderne UI-Bibliothek" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/casoon-ui-lib/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li><a href="/casoon-ui-lib/">Startseite</a></li>
          <li><a href="/casoon-ui-lib/animations">Animationen</a></li>
          <li><a href="/casoon-ui-lib/effects">Effekte</a></li>
          <li><a href="/casoon-ui-lib/typography">Typografie</a></li>
          <li><a href="/casoon-ui-lib/fonts">Schriften</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  :global(body) {
    font-family: var(--font-sans);
    margin: 0;
    padding: 0;
    background-color: var(--surface-1);
    color: var(--text-1);
  }

  :global(header) {
    background-color: var(--surface-2);
    padding: var(--size-4);
    border-bottom: 1px solid var(--surface-3);
  }

  :global(nav ul) {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: var(--size-4);
  }

  :global(nav a) {
    color: var(--text-1);
    text-decoration: none;
    padding: var(--size-2) var(--size-4);
    border-radius: var(--radius-2);
    transition: background-color 0.2s;
  }

  :global(nav a:hover) {
    background-color: var(--surface-3);
  }

  :global(main) {
    max-width: var(--size-content-3);
    margin: 0 auto;
    padding: var(--size-4);
  }
</style> 