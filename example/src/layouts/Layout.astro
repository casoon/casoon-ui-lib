---

//import 'casoon-ui-lib/base.css';
import 'casoon-ui-lib/animations.css';
//import 'casoon-ui-lib/effects.css';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/animations">Animationen</a></li>
          <li><a href="/effects">Effekte</a></li>
          <li><a href="/typography">Typografie</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  :global(body) {
    font-family: var(--font-sans);
    line-height: var(--font-lineheight-3);
    color: var(--gray-9);
    background: var(--gray-0);
  }

  :global(header) {
    background: var(--gray-1);
    padding: var(--size-4);
    border-bottom: 1px solid var(--gray-3);
  }

  :global(nav ul) {
    display: flex;
    gap: var(--size-4);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  :global(nav a) {
    color: var(--gray-7);
    text-decoration: none;
    font-weight: var(--font-weight-5);
    transition: color var(--transition-2);
  }

  :global(nav a:hover) {
    color: var(--gray-9);
  }

  :global(main) {
    max-width: var(--size-content-3);
    margin: 0 auto;
    padding: var(--size-4);
  }
</style>
